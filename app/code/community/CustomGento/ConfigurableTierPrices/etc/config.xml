<?xml version="1.0"?>
<config>
    <modules>
        <CustomGento_ConfigurableTierPrices>
            <version>2.1.1</version>
        </CustomGento_ConfigurableTierPrices>
    </modules>
    <global>
        <models>
            <customgento_configurabletierprices>
                <class>CustomGento_ConfigurableTierPrices_Model</class>
            </customgento_configurabletierprices>
        </models>
        <resources>
            <customgento_configurabletierprices_setup>
                <setup>
                    <module>CustomGento_ConfigurableTierPrices</module>
                    <class>Mage_Catalog_Model_Resource_Setup</class>
                </setup>
            </customgento_configurabletierprices_setup>
        </resources>
        <helpers>
            <customgento_configurabletierprices>
                <class>CustomGento_ConfigurableTierPrices_Helper</class>
            </customgento_configurabletierprices>
        </helpers>
        <events>
            <catalog_product_get_final_price>
                <observers>
                    <customgento_configurabletierprices>
                        <class>customgento_configurabletierprices/observer</class>
                        <method>catalogProductGetFinalPrice</method>
                    </customgento_configurabletierprices>
                </observers>
            </catalog_product_get_final_price>
        </events>
    </global>
    <adminhtml>
        <translate>
            <modules>
                <CustomGento_ConfigurableTierPrices>
                    <files>
                        <default>CustomGento_ConfigurableTierPrices.csv</default>
                    </files>
                </CustomGento_ConfigurableTierPrices>
            </modules>
        </translate>
    </adminhtml>
    <default>
        <customgento_configurabletierprices>
            <general>
                <is_enabled>1</is_enabled>
                <disabled_for_category/>
            </general>
        </customgento_configurabletierprices>
    </default>
    <phpunit>
        <suite>
            <modules>
                <CustomGento_ConfigurableTierPrices/>
            </modules>
        </suite>
    </phpunit>
</config>
